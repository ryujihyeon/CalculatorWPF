<Application x:Class="Calculator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Calculator"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <SolidColorBrush
           x:Key="numberColor"
            Color="Black"/>
        <SolidColorBrush 
            x:Key="operatorColor"
            Color="White"/>

        <Style TargetType="Button" x:Key="numberButtonStyle">
            <Setter Property="Foreground" Value="{StaticResource operatorColor}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Background" Value="Gray"/>
        </Style>
        <Style TargetType="Button" x:Key="operatorButtonStyle">
            <Setter Property="Foreground" Value="{StaticResource operatorColor}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Background" Value="Green"/>
        </Style>
        <Style TargetType="Button" x:Key="expandoperBntstl">
            <Setter Property="Foreground" Value="{StaticResource numberColor}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Background" Value="lightGray"/>
        </Style>

    </Application.Resources>
</Application>
